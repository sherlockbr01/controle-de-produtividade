{
    "name": "jti30/sistema_produtividade",
    "description": "Sistema de Produtividade para Servidores",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Jti30\\SistemaProdutividade\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Ronaldo",
            "email": "ronaldoneves31@hotmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "phpmailer/phpmailer": "^6.9",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
